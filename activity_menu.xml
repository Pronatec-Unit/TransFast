<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adryangabriel.escolaronibus.Menu">

    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/logoescola"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="80dp"
        android:contentDescription="escolaronibus" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/motoristas"
        android:id="@+id/imageButton4"
        android:layout_alignTop="@+id/buttonFilhos"
        android:layout_centerHorizontal="true"
        android:contentDescription="motoristas" />

    <Button
        android:text="ir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonFilhos"
        android:layout_alignRight="@+id/buttonFilhos"
        android:layout_alignEnd="@+id/buttonFilhos"
        android:id="@+id/bfilhos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/filhos"
        android:layout_marginTop="65dp"
        android:id="@+id/buttonFilhos"
        android:contentDescription="filhos"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="ir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton4"
        android:layout_alignLeft="@+id/imageButton5"
        android:layout_alignStart="@+id/imageButton5"
        android:id="@+id/buttonconta"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ajuda"
        android:id="@+id/imageButton7"
        android:layout_below="@+id/buttonconta"
        android:layout_alignLeft="@+id/buttonajuda"
        android:layout_alignStart="@+id/buttonajuda"
        android:layout_marginTop="29dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/conta"
        android:id="@+id/imageButton5"
        android:contentDescription="conta"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="ir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonmoto"
        android:layout_alignBaseline="@+id/bfilhos"
        android:layout_alignBottom="@+id/bfilhos"
        android:layout_alignRight="@+id/imageButton4"
        android:layout_alignEnd="@+id/imageButton4" />

    <Button
        android:text="IR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonajuda"
        android:layout_below="@+id/imageButton7"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
