<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.esy.calculadoranova.projetocalculadora.Actv_Calculadora"
    android:background="#023950"
    android:paddingTop="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical">
        <TextView android:id="@+id/textView" android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="right" android:textSize="80sp"
            android:textStyle="bold"
            android:hint="0"
            android:textColor="#ffffff"
            android:textColorHint="#f1f1f1"></TextView>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:layout_height="60dp" android:id="@+id/buttonClear" android:text="C" android:layout_width="match_parent" android:textSize="40sp"
                android:background="#ffffff"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"></Button>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:layout_height="65dp" android:id="@+id/button7" android:text="7" android:layout_weight="1" android:layout_width="match_parent" android:textSize="45sp"
                android:background="#ffffff"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"></Button>
            <Button android:layout_height="65dp" android:id="@+id/button8" android:text="8" android:layout_weight="1" android:layout_width="match_parent" android:textSize="45sp"
                android:background="#ffffff"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"></Button>
            <Button android:layout_height="65dp" android:id="@+id/button9" android:text="9" android:layout_weight="1" android:layout_width="match_parent" android:textSize="45sp"
                android:background="#ffffff"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"></Button>
            <Button android:layout_height="65dp" android:id="@+id/buttonPlus" android:text="+" android:layout_weight="1" android:layout_width="match_parent" android:textSize="45sp"
                android:background="#ffffff"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="5dp"></Button>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:layout_height="65dp" android:id="@+id/button4" android:text="4" android:layout_weight="1" android:layout_width="match_parent" android:textSize="45sp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="#ffffff"></Button>
            <Button android:layout_height="65dp" android:id="@+id/button5" android:text="5" android:layout_weight="1" android:layout_width="match_parent" android:textSize="45sp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="#ffffff"></Button>
            <Button android:layout_height="65dp" android:id="@+id/button6" android:text="6" android:layout_weight="1" android:layout_width="match_parent" android:textSize="45sp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="#ffffff"></Button>
            <Button android:layout_height="65dp" android:id="@+id/buttonMinus" android:text="-" android:layout_weight="1" android:layout_width="match_parent" android:textSize="45sp"
                android:layout_marginBottom="5dp"
                android:background="#ffffff"></Button>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:layout_height="65dp" android:id="@+id/button1" android:text="1" android:layout_weight="1" android:layout_width="match_parent" android:textSize="45sp"
                android:textColor="#000000"
                android:background="#ffffff"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"></Button>
            <Button android:layout_height="65dp" android:id="@+id/button2" android:text="2" android:layout_weight="1" android:layout_width="match_parent" android:textSize="45sp"
                android:textColor="#000000"
                android:background="#ffffff"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"></Button>
            <Button android:layout_height="65dp" android:id="@+id/button3" android:text="3" android:layout_weight="1" android:layout_width="match_parent" android:textSize="45sp"
                android:textColor="#000000"
                android:background="#ffffff"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"></Button>
            <Button android:layout_height="65dp" android:id="@+id/buttonTimes" android:text="*" android:layout_weight="1" android:layout_width="match_parent" android:textSize="45sp"
                android:textColor="#000000"
                android:background="#ffffff"
                android:layout_marginBottom="5dp"></Button>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:layout_height="65dp" android:id="@+id/button0" android:text="0" android:layout_weight="1" android:layout_width="match_parent" android:textSize="45sp"
                android:textColor="#000000"
                android:background="#ffffff"
                android:layout_marginRight="5dp"></Button>
            <Button android:layout_height="65dp" android:id="@+id/buttonDecimal" android:text="." android:layout_weight="1" android:layout_width="match_parent" android:textSize="45sp"
                android:textColor="#000000"
                android:background="#ffffff"
                android:layout_marginRight="5dp"></Button>
            <Button android:layout_height="65dp" android:id="@+id/buttonEquals" android:text="=" android:layout_weight="1" android:layout_width="match_parent" android:textSize="45sp"
                android:textColor="#000000"
                android:background="#ffffff"
                android:layout_marginRight="5dp"></Button>
            <Button android:layout_height="65dp" android:id="@+id/buttonDivide" android:text="/" android:layout_weight="1" android:layout_width="match_parent" android:textSize="45sp"
                android:textColor="#000000"
                android:background="#ffffff"></Button>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
